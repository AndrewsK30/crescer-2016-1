@model IEnumerable<LojaNinja.Dominio.Pedido>

    @{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <p>
        <a href="~/Produto/CadastrarProduto" class="btn btn-primary">Cadastrar novo Pedido</a>
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Data do Pedido
            </th>
            <th>
                Data Entrega Des.
            </th>
            <th>
                Produto
            </th>
            <th>
                Valor
            </th>
            <th>
                Cliente
            </th>
            <th>
                Cidade
            </th>
            <th>
                Estado
            </th>
            <th>
                Urgente
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.DataPedido.ToShortDateString()
            </td>
            <td>
                @item.DataEntregaDesejada.ToShortDateString()
            </td>
            <td>
                @item.NomeProduto
            </td>
            <td>
                @item.Valor.ToString("c2")
            </td>
            <td>
                @item.NomeCliente
            </td>
            <td>
                @item.Cidade
            </td>
            <td>
                @item.Estado
            </td>
            <td>@if (item.PedidoUrgente)
                {
                    <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                }
                else
                {
                    <i class="fa fa-thumbs-down" aria-hidden="true"></i>
                }
            </td>
            <td>
                <a href="~/Produto/CadastrarProduto/@item.Id">Editar</a>
                <a href="~/Produto/Detalhes/@item.Id">Detalhes</a>
                <a href="~/Produto/Excluir/@item.Id">Remover</a>
            </td>
        </tr>
        }
    </table>
