@model IEnumerable<LojaNinja.Dominio.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Id
        </th>
        <th>
            Nome
        </th>
        <th>
            Email
        </th>
        <th>
            Permissões
        </th>
   </tr>
    @foreach (var usuario in Model)
    {
    <tr>
            <td>
                @usuario.Id
            </td>
            <td>
                @usuario.Nome
            </td>
            <td>
                @usuario.Email
            </td>
            <td>
                @String.Join("", usuario.Permissoes)
            </td>         
    </tr>
    }
</table>
